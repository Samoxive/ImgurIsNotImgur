<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="Top"
        android:entries="@array/section"
        android:entryValues="@array/section"
        android:key="section"
        android:title="Default Section" />
    <ListPreference
        android:defaultValue="Viral"
        android:entries="@array/sort"
        android:entryValues="@array/sort"
        android:key="sort"
        android:title="Default Sorting" />
    <EditTextPreference
        android:defaultValue="/r/CatsStandingUp"
        android:key="subreddit"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Default Subreddit" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="nsfw_enabled"
        android:title="NSFW Content (?)" />
</PreferenceScreen>