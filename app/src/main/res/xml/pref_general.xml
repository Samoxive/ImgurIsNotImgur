<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:defaultValue="1"
        android:entries="@array/section"
        android:entryValues="@array/section"
        android:key="list_preference_1"
        android:title="Default Section" />
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/sort"
        android:entryValues="@array/sort"
        android:key="list_preference_2"
        android:title="Default Sorting" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:key="edit_text_preference_1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Default Subreddit" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="switch_preference_1"
        android:title="NSFW Content (?)" />
</PreferenceScreen>